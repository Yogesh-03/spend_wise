<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="5dp" /> <!-- Adjust the corner radius as needed -->
            <stroke
                android:width="1dp"
                android:color="#afa9a7" /> \
        </shape>
    </item>

    <!-- Transparent Center Shape -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>
